// Definimos el pin del LED para que el código sea fácil de leer
const int ledPin = 13; 

void setup() {
  // Inicializamos la comunicación serie a 9600 baudios
  Serial.begin(9600);
  
  // Configuramos el pin 13 como SALIDA
  pinMode(ledPin, OUTPUT);
  
  Serial.println("Sistema iniciado...");
}

void loop() {
  digitalWrite(ledPin, HIGH);   // Enciende el LED (5V)
  Serial.println("LED Encendido");
  delay(1000);                  // Espera 1000 milisegundos (1 segundo)
  
  digitalWrite(ledPin, LOW);    // Apaga el LED (0V)
  Serial.println("LED Apagado");
  delay(1000);                  // Espera 1 segundo
}
